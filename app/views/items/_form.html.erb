
<%=form_for @item do |form| %>
  <div class="form-group">
   <strong><%=form.label :name  %></strong> <br>
    <%=form.text_field :name  %>
  </div>

  <div class="form-group">
   <strong><%=form.label :description  %></strong> <br>
    <%=form.text_area :description  %>
  </div>

  <div class="actions">
    <%=form.submit %>
  </div>
<%end %>