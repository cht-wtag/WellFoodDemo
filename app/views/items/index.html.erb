
<div class="title-container">
  <h1>Items</h1>
  <%= link_to "Add new Item",new_item_path, class: "btn btn-default" %>
</div>

<div class="items">
  <% @items.each do |item| %>
  <div class="item">
    <div class="thumbnail">
      <div class="caption">
    <h3><%= link_to item.name, item_path(item) %></h3>
    <p> <%=item.description %></p>
    <p>
      <%var1=current_user.id %>
      <%var2=item.user_id %>
      <%if var1==var2 %>
       <%= link_to "Edit", edit_item_path(item) , class: "btn btn-default" %>
     <%= link_to "Delete", item_path(item), data: {confirm: "are you sure to delete #{item.name}?"},
                        method: :delete , class: "btn btn-default" %>
      <% end %>
    </p>
      </div>
    </div>
  </div>
    </div>
  </div>

  <% end %>
</div>
